<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="2dp"
    fresco:cardCornerRadius="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout2"
        android:background="@drawable/touch_bg">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hero_header"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            fresco:layout_constraintStart_toStartOf="parent"
            fresco:layout_constraintTop_toTopOf="parent"
            fresco:roundedCornerRadius="3dp" />

        <TextView
            android:id="@+id/hero_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            fresco:layout_constraintLeft_toRightOf="@id/hero_header"
            fresco:layout_constraintTop_toTopOf="parent"
            tools:text="Phantom Assassin" />

        <TextView
            android:id="@+id/winornot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            fresco:layout_constraintBottom_toBottomOf="@id/hero_header"
            fresco:layout_constraintLeft_toLeftOf="@id/hero_name"
            tools:text="Lose" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            fresco:layout_constraintBottom_toBottomOf="@id/winornot"
            fresco:layout_constraintLeft_toRightOf="@id/winornot"
            tools:text="2Days ago" />

        <TextView
            android:id="@+id/game_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            fresco:layout_constraintBottom_toBottomOf="@id/hero_name"
            fresco:layout_constraintLeft_toRightOf="@id/hero_name"
            tools:text="All Pick" />

        <TextView
            android:id="@+id/lobby_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="15sp"
            fresco:layout_constraintBottom_toBottomOf="@id/winornot"
            fresco:layout_constraintLeft_toRightOf="@id/time"
            tools:text="Battle Cup" />

        <TextView
            android:id="@+id/skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textColor="@color/normal"
            android:layout_marginTop="3dp"
            android:textSize="19sp"
            fresco:layout_constraintRight_toRightOf="parent"
            fresco:layout_constraintTop_toTopOf="parent"
            tools:text="Very High" />

        <TextView
            android:id="@+id/kda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            fresco:layout_constraintBottom_toBottomOf="@id/hero_header"
            fresco:layout_constraintRight_toRightOf="@id/skills"
            tools:text="10/0/10" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>