            android:focusable="true"
            app:cardElevation="0dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/card_gpm"
            app:layout_constraintRight_toLeftOf="@id/card_lh"
