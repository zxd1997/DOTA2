<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:foreground="?selectableItemBackground"
    android:stateListAnimator="@drawable/touch_card">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/played_header"
        android:layout_width="96dp"
        android:layout_height="54dp" />

    <TextView
        android:id="@+id/played_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="106dp"
        android:layout_marginTop="4dp"
        android:textSize="17sp"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="Phantom Assassin" />

    <TextView
        android:id="@+id/last_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="106dp"
        tools:text="1 year ago" />

    <TextView
        android:id="@+id/matches_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        tools:text="Played:500" />

    <TextView
        android:id="@+id/hero_win_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp"
        android:textSize="15sp"
        tools:text="Winrate:50.00%" />
</android.support.v7.widget.CardView>