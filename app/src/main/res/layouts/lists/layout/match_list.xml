<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    fresco:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/touch_bg">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hero_header"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            fresco:roundedCornerRadius="3dp" />

        <TextView
            android:id="@+id/hero_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hero_header"
            android:textSize="20sp"
            tools:text="Phoenix" />

        <TextView
            android:id="@+id/winornot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/hero_header"
            android:layout_alignLeft="@id/hero_name"
            android:textSize="17sp"
            tools:text="Lose" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/winornot"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/winornot"
            android:textSize="12sp"
            tools:text="2Days ago" />

        <TextView
            android:id="@+id/game_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/hero_name"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/hero_name"
            tools:text="All Pick" />

        <TextView
            android:id="@+id/lobby_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/game_mode"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/game_mode"
            tools:text="Battle Cup" />

        <TextView
            android:id="@+id/skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textSize="19sp"
            tools:text="Very High" />

        <TextView
            android:id="@+id/kda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/hero_header"
            android:layout_alignRight="@id/skills"
            android:textSize="17sp"
            tools:text="10/0/10" />


    </RelativeLayout>

</android.support.v7.widget.CardView>