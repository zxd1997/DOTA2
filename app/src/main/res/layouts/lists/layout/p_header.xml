<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    app:cardCornerRadius="4dp">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hheader"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            app:roundBottomRight="false"
            app:roundTopRight="false"
            app:roundedCornerRadius="2dp" />

        <View
            android:id="@+id/color_detail"
            android:layout_width="3dp"
            android:layout_height="45dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="3dp" />

        <TextView
            android:id="@+id/hname"
            android:layout_width="190dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="1231231" />

        <TextView
            android:id="@+id/damage_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textColor="@color/win"
            tools:text="@string/d_out" />

        <TextView
            android:id="@+id/damage_taken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="2dp"
            android:textColor="@color/lose"
            android:textSize="15sp"
            tools:text="@string/d_taken" />
</android.support.v7.widget.CardView>