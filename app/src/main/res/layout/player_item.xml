<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    android:layout_margin="3dp"
    fresco:cardCornerRadius="3dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/player_hero"
            android:layout_width="96dp"
            android:layout_height="54dp"
            android:layout_margin="8dp"
            fresco:layout_constraintBottom_toBottomOf="parent"
            fresco:layout_constraintStart_toStartOf="parent"
            fresco:roundedCornerRadius="4dp" />

        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="7dp"
            android:textColor="@android:color/black"
            fresco:layout_constraintStart_toEndOf="@+id/player_hero"
            fresco:layout_constraintTop_toTopOf="parent"
            tools:text="!@@@@@" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="K"
            android:textColor="@color/win"
            android:textSize="14dp"
            fresco:layout_constraintBottom_toTopOf="@id/k"
            fresco:layout_constraintLeft_toLeftOf="@+id/player_name" />

        <TextView
            android:id="@+id/k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/win"
            fresco:layout_constraintBottom_toBottomOf="parent"
            fresco:layout_constraintStart_toEndOf="@+id/player_hero"
            tools:text="10" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="D"
            android:textColor="@color/lose"
            android:textSize="14dp"
            fresco:layout_constraintStart_toEndOf="@+id/textView4"
            fresco:layout_constraintTop_toTopOf="@id/textView4" />

        <TextView
            android:id="@+id/d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textColor="@color/lose"
            fresco:layout_constraintBottom_toBottomOf="parent"
            fresco:layout_constraintStart_toStartOf="@+id/textView5"
            tools:text="10" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="A"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14dp"
            fresco:layout_constraintStart_toEndOf="@+id/textView5"
            fresco:layout_constraintTop_toTopOf="@id/textView5" />

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textColor="@android:color/holo_blue_dark"
            fresco:layout_constraintBottom_toBottomOf="parent"
            fresco:layout_constraintStart_toStartOf="@+id/textView6"
            tools:text="10" />

        <TextView
            android:id="@+id/gpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            fresco:layout_constraintBottom_toBottomOf="@id/xpm"
            fresco:layout_constraintRight_toLeftOf="@id/xpm" />

        <TextView
            android:id="@+id/xpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            fresco:layout_constraintBottom_toBottomOf="@id/k"
            fresco:layout_constraintRight_toLeftOf="@id/item_0" />

        <TextView
            android:id="@+id/damage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            fresco:layout_constraintRight_toLeftOf="@id/item_0"
            fresco:layout_constraintTop_toTopOf="@id/textView4" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_0"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="3dp"
            fresco:layout_constraintEnd_toStartOf="@+id/item_1"
            fresco:layout_constraintTop_toTopOf="parent" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_1"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="3dp"
            fresco:layout_constraintEnd_toStartOf="@+id/item_2"
            fresco:layout_constraintTop_toTopOf="parent" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_2"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            fresco:layout_constraintEnd_toEndOf="parent"
            fresco:layout_constraintTop_toTopOf="parent" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_3"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="1dp"
            fresco:layout_constraintBottom_toBottomOf="parent"
            fresco:layout_constraintEnd_toStartOf="@+id/item_4" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_4"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="1dp"
            fresco:layout_constraintBottom_toBottomOf="parent"
            fresco:layout_constraintEnd_toStartOf="@+id/item_5" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_5"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            fresco:layout_constraintEnd_toEndOf="parent"
            fresco:layout_constraintTop_toBottomOf="@+id/item_2" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>