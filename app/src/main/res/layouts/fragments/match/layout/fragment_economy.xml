<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Fragments.Match.EconomyFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/net_worth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:text="@string/team_networth_experience_difference"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.zxd1997.dota2.Chart.MyLineChartView
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:layout_margin="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/net_worth" />


        <View
            android:id="@+id/gold_c"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:background="@color/very_high"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/gold"
            app:layout_constraintTop_toBottomOf="@id/chart" />

        <TextView
            android:id="@+id/gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/gold"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/gold_c"
            app:layout_constraintRight_toLeftOf="@id/xp_c"
            app:layout_constraintTop_toBottomOf="@id/chart" />

        <View
            android:id="@+id/xp_c"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:background="@color/win"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/gold"
            app:layout_constraintRight_toLeftOf="@+id/xp"
            app:layout_constraintTop_toBottomOf="@id/chart" />

        <TextView
            android:id="@+id/xp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:text="@string/experience"
            app:layout_constraintLeft_toRightOf="@id/xp_c"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chart" />

        <TextView
            android:id="@+id/n_w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/net_worth"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/gold" />

        <com.example.zxd1997.dota2.Chart.MyLineChartView
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/n_w" />


        <View
            android:id="@+id/color0"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/name0"
            app:layout_constraintTop_toBottomOf="@id/chart1" />

        <TextView
            android:id="@+id/name0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/color0"
            app:layout_constraintRight_toLeftOf="@id/color1"
            app:layout_constraintTop_toBottomOf="@id/chart1"
            tools:text="zxzxxxxxxxxxxx" />

        <View
            android:id="@+id/color1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/name0"
            app:layout_constraintRight_toLeftOf="@id/name1"
            app:layout_constraintTop_toBottomOf="@id/chart1" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/color1"
            app:layout_constraintRight_toLeftOf="@id/color2"
            app:layout_constraintTop_toBottomOf="@id/chart1"
            tools:text="zxzxxxxxxxxxxx" />

        <View
            android:id="@+id/color2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/name1"
            app:layout_constraintRight_toLeftOf="@id/name2"
            app:layout_constraintTop_toBottomOf="@id/chart1" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/color2"
            app:layout_constraintRight_toLeftOf="@id/color3"
            app:layout_constraintTop_toBottomOf="@id/chart1"
            tools:text="zxzxxxxxxxxxxx" />

        <View
            android:id="@+id/color3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/name2"
            app:layout_constraintRight_toLeftOf="@id/name3"
            app:layout_constraintTop_toBottomOf="@id/chart1" />

        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/color3"
            app:layout_constraintRight_toLeftOf="@id/color4"
            app:layout_constraintTop_toBottomOf="@id/chart1"
            tools:text="zxzxxxxxxxxxxx" />

        <View
            android:id="@+id/color4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/name3"
            app:layout_constraintRight_toLeftOf="@id/name4"
            app:layout_constraintTop_toBottomOf="@id/chart1" />

        <TextView
            android:id="@+id/name4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/color4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chart1"
            tools:text="zxzxxxxxxxxxxx" />

        <View
            android:id="@+id/color5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/name5"
            app:layout_constraintTop_toBottomOf="@id/name0" />

        <TextView
            android:id="@+id/name5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/color5"
            app:layout_constraintRight_toLeftOf="@id/color6"
            app:layout_constraintTop_toBottomOf="@id/name0" />

        <View
            android:id="@+id/color6"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/name5"
            app:layout_constraintRight_toLeftOf="@id/name6"
            app:layout_constraintTop_toBottomOf="@id/name0" />

        <TextView
            android:id="@+id/name6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/color6"
            app:layout_constraintRight_toLeftOf="@id/color7"
            app:layout_constraintTop_toBottomOf="@id/name0" />

        <View
            android:id="@+id/color7"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/name6"
            app:layout_constraintRight_toLeftOf="@id/name7"
            app:layout_constraintTop_toBottomOf="@id/name0" />

        <TextView
            android:id="@+id/name7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/color7"
            app:layout_constraintRight_toLeftOf="@id/color8"
            app:layout_constraintTop_toBottomOf="@id/name0" />

        <View
            android:id="@+id/color8"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/name7"
            app:layout_constraintRight_toLeftOf="@id/name8"
            app:layout_constraintTop_toBottomOf="@id/name0" />

        <TextView
            android:id="@+id/name8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/color8"
            app:layout_constraintRight_toLeftOf="@id/color9"
            app:layout_constraintTop_toBottomOf="@id/name0" />

        <View
            android:id="@+id/color9"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/name8"
            app:layout_constraintRight_toLeftOf="@id/name9"
            app:layout_constraintTop_toBottomOf="@id/name0" />

        <TextView
            android:id="@+id/name9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/color9"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name0" />

        <TextView
            android:id="@+id/gs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/gold_source"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name5" />

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/subchart"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gs" />

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/mainchart"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subchart" />
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>