<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="47dp"
    android:layout_height="47dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ability"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        fresco:placeholderImage="@drawable/ability_0"
        fresco:roundedCornerRadius="2dp" />

    <TextView
        android:id="@+id/talent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.9dp"
        android:layout_marginRight="0.5dp"
        android:layout_marginTop="-1.55dp"
        android:lineSpacingMultiplier="0.78"
        android:textColor="@android:color/white"
        android:textSize="9.8sp" />

</FrameLayout>