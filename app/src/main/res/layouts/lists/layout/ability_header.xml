<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="48dp"
    android:layout_margin="1dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hheader"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundBottomRight="false"
            app:roundTopRight="false"
            app:roundedCornerRadius="2dp" />

        <View
            android:id="@+id/color_skill"
            android:layout_width="2dp"
            android:layout_height="45dp"
            app:layout_constraintLeft_toRightOf="@id/hheader"
            app:layout_constraintTop_toTopOf="@id/hheader" />

        <TextView
            android:id="@+id/playername"
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@id/hheader"
            app:layout_constraintStart_toEndOf="@+id/hheader"
            app:layout_constraintTop_toTopOf="@id/hheader"
            tools:text="xxxxxxxxxx" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>