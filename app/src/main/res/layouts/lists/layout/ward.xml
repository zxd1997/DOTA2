<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="2dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/wheader"
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            app:roundBottomRight="false"
            app:roundTopRight="false"
            app:roundedCornerRadius="2dp" />

        <View
            android:id="@+id/color_ward"
            android:layout_width="2dp"
            android:layout_height="36dp"
            android:layout_marginLeft="67dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/ward_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="71dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="1231231" />

        <TextView
            android:id="@+id/left"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/destroyed"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginRight="52dp"
            android:layout_marginTop="3dp" />


    <TextView
            android:id="@+id/ward_left"
        android:layout_width="50dp"
            android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="52dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
        android:layout_marginTop="20dp"
            tools:text="1:00:00" />


    <TextView
            android:id="@+id/placed"
        android:layout_width="50dp"
            android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="107dp"
            android:text="@string/placed"
            android:textColor="@android:color/black"
            android:textSize="14sp"
        android:layout_marginTop="3dp" />

        <TextView
            android:id="@+id/ward_place"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginRight="107dp"
            android:layout_marginTop="20dp"
            tools:text="1:00:00" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ward"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right|center_vertical" />
</FrameLayout>