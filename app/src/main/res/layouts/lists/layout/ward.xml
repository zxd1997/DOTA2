<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/wheader"
        android:layout_width="64dp"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        app:roundBottomRight="false"
        app:roundTopRight="false"
        app:roundedCornerRadius="2dp" />

    <View
        android:id="@+id/color_ward"
        android:layout_width="2dp"
        android:layout_height="36dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/ward_name"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="82dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="1231231" />

    <TextView
        android:id="@+id/left"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="58dp"
        android:layout_marginTop="4dp"
        android:text="@string/destroyed"
        android:textColor="@android:color/black"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/ward_left"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="58dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="1:00:00" />


    <TextView
        android:id="@+id/placed"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="116dp"
        android:layout_marginTop="4dp"
        android:text="@string/placed"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ward_place"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="116dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="1:00:00" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ward"
        android:layout_width="42dp"
        android:layout_height="32dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="82dp"
        android:layout_marginRight="58dp"
        android:background="@android:color/darker_gray" />
</FrameLayout>