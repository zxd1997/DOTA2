<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="2dp">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hheader"
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:layout_gravity="left|center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/color_skill"
            android:layout_width="2dp"
            android:layout_height="36dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="64dp"
            app:layout_constraintLeft_toRightOf="@id/hheader"
            app:layout_constraintTop_toTopOf="@id/hheader" />

        <TextView
            android:id="@+id/playername"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="70dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/hheader"
            app:layout_constraintStart_toEndOf="@+id/hheader"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="xxxxxxxxxx" />


</android.support.v7.widget.CardView>