<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    fresco:cardCornerRadius="0dp"
    fresco:cardElevation="1dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:stateListAnimator="@drawable/touch_card">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/player_hero"
                android:layout_width="113.77dp"
                android:layout_height="64dp"
                fresco:layout_constraintTop_toTopOf="parent"
                fresco:layout_constraintBottom_toBottomOf="parent"
                fresco:layout_constraintStart_toStartOf="parent"
                fresco:roundBottomRight="false"
                fresco:roundTopRight="false" />

            <View
                android:id="@+id/color_hero"
                android:layout_width="3dp"
                android:layout_height="64dp"
                fresco:layout_constraintLeft_toRightOf="@id/player_hero"
                fresco:layout_constraintTop_toTopOf="@id/player_hero" />

            <TextView
                android:id="@+id/player_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/black"
                fresco:layout_constraintStart_toEndOf="@+id/player_hero"
                android:textSize="15sp"
                fresco:layout_constraintEnd_toStartOf="@id/item_0"
                fresco:layout_constraintTop_toTopOf="parent"
                tools:text="!@@@@@" />

            <TextView
                android:id="@+id/kk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                fresco:layout_constraintBottom_toTopOf="@id/k"
                fresco:layout_constraintLeft_toLeftOf="@+id/player_name"
                tools:text="K/D/A" />

            <TextView
                android:id="@+id/k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginBottom="4dp"
                fresco:layout_constraintBottom_toBottomOf="parent"
                fresco:layout_constraintLeft_toLeftOf="@id/player_name"
                tools:text="10/10/10" />

            <TextView
                android:id="@+id/in_battle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                fresco:layout_constraintRight_toRightOf="@id/damage"
                fresco:layout_constraintBottom_toBottomOf="@id/k"
                tools:text="In Battle:100%" />

            <TextView
                android:id="@+id/damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textSize="13sp"
                fresco:layout_constraintRight_toLeftOf="@id/item_0"
                fresco:layout_constraintTop_toTopOf="@id/kk"
                tools:text="Damage:100000" />

            <TextView
                android:id="@+id/lane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                fresco:layout_constraintBottom_toTopOf="@id/damage"
                fresco:layout_constraintRight_toRightOf="@id/damage" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_0"
                android:layout_width="35dp"
                android:layout_height="26dp"
                android:layout_marginRight="4dp"
                fresco:layout_constraintRight_toLeftOf="@id/item_1"
                fresco:layout_constraintTop_toTopOf="@id/item_1"
                fresco:actualImageScaleType="centerCrop"
                fresco:roundedCornerRadius="2dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_1"
                android:layout_width="35dp"
                android:layout_height="26dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                fresco:layout_constraintEnd_toStartOf="@+id/item_2"
                fresco:layout_constraintTop_toTopOf="parent"
                fresco:actualImageScaleType="centerCrop"
                fresco:roundedCornerRadius="2dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_2"
                android:layout_width="35dp"
                android:layout_height="26dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                fresco:layout_constraintEnd_toEndOf="parent"
                fresco:layout_constraintTop_toTopOf="parent"
                fresco:actualImageScaleType="centerCrop"
                fresco:roundedCornerRadius="2dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_3"
                android:layout_width="35dp"
                android:layout_height="26dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                fresco:layout_constraintBottom_toBottomOf="parent"
                fresco:layout_constraintEnd_toStartOf="@+id/item_4"
                fresco:actualImageScaleType="centerCrop"
                fresco:roundedCornerRadius="2dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_4"
                android:layout_width="35dp"
                android:layout_height="26dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                fresco:layout_constraintBottom_toBottomOf="parent"
                fresco:actualImageScaleType="centerCrop"
                fresco:layout_constraintEnd_toStartOf="@+id/item_5"
                fresco:roundedCornerRadius="2dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_5"
                android:layout_width="35dp"
                android:layout_height="26dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                fresco:actualImageScaleType="centerCrop"
                android:layout_marginTop="4dp"
                fresco:layout_constraintBottom_toBottomOf="parent"
                fresco:layout_constraintEnd_toEndOf="parent"
                fresco:roundedCornerRadius="2dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/player_detail" />
</android.support.v7.widget.CardView>