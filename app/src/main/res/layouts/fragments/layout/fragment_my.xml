<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:foregroundGravity="center"
        android:visibility="gone"
        fresco:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintEnd_toEndOf="parent"
        fresco:layout_constraintHorizontal_bias="0.501"
        fresco:layout_constraintStart_toStartOf="parent"
        fresco:layout_constraintTop_toTopOf="@+id/my"
        fresco:layout_constraintVertical_bias="0.44" />

    <LinearLayout
        android:id="@+id/no_binding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        fresco:layout_constraintBottom_toTopOf="@+id/progressBar">

        <TextView
            android:id="@+id/text_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="32dp"
            android:text="@string/no_id" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/steam_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/input_your_steam32_id"
                android:inputType="number" />


        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/connect"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/connect" />

        <Button
            android:id="@+id/verify"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/verify"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            fresco:cardCornerRadius="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/header"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="8dp"
                    fresco:placeholderImage="@drawable/logo"
                    fresco:roundedCornerRadius="5dp" />

                <TextView
                    android:id="@+id/personaname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/header"
                    tools:text="Player name"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/loccountrycode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/header"
                    android:layout_toRightOf="@id/personaname" />

                <TextView
                    android:id="@+id/account_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/personaname"
                    android:layout_below="@id/personaname"
                    android:layout_marginTop="5dp"
                    tools:text="id:" />

                <TextView
                    android:id="@+id/win"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/header"
                    android:layout_alignLeft="@id/personaname"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/win"
                    tools:text="wins:0" />

                <TextView
                    android:id="@+id/lose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/header"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/win"
                    tools:text="loses:0"
                    android:textColor="@color/lose" />

                <TextView
                    android:id="@+id/win_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/header"
                    android:layout_toRightOf="@id/lose"
                    tools:text="winrate:0%"
                    android:textColor="@android:color/black" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/tier"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    fresco:placeholderImage="@drawable/rank_icon_0"
                    fresco:roundedCornerRadius="5dp" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/star"
                    android:layout_width="90dp"
                    android:layout_height="15dp"
                    android:layout_alignLeft="@id/tier"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/rank"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tier"
                    android:layout_alignLeft="@id/tier"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:text="@string/recent_matches" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recent_matches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>