<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible">

        <TextView
            android:id="@+id/bear_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/spirit_bear"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            fresco:layout_constraintLeft_toLeftOf="parent"
            fresco:layout_constraintTop_toTopOf="parent" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bear_item_0"
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            fresco:layout_constraintEnd_toStartOf="@+id/bear_item_1"
            fresco:layout_constraintTop_toBottomOf="@id/bear_item"
            fresco:roundedCornerRadius="2dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bear_item_1"
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            fresco:layout_constraintEnd_toStartOf="@+id/bear_item_2"
            fresco:layout_constraintTop_toBottomOf="@id/bear_item"
            fresco:roundedCornerRadius="2dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bear_item_2"
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            fresco:layout_constraintEnd_toEndOf="parent"
            fresco:layout_constraintTop_toBottomOf="@id/bear_item"
            fresco:roundedCornerRadius="2dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bear_item_3"
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:layout_marginRight="4dp"
            fresco:layout_constraintEnd_toStartOf="@+id/bear_item_4"
            fresco:layout_constraintTop_toTopOf="@id/bear_item_5"
            fresco:roundedCornerRadius="2dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bear_item_4"
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            fresco:layout_constraintEnd_toStartOf="@+id/bear_item_5"
            fresco:layout_constraintTop_toTopOf="@id/bear_item_5"
            fresco:roundedCornerRadius="2dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bear_item_5"
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            fresco:layout_constraintEnd_toEndOf="parent"
            fresco:layout_constraintTop_toBottomOf="@id/bear_item_2"
            fresco:roundedCornerRadius="2dp" />

        <TextView
            android:id="@+id/bear_backpack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/bear_backpack"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            fresco:layout_constraintLeft_toLeftOf="parent"
            fresco:layout_constraintTop_toBottomOf="@id/bear_item_5" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bear_backpack_0"
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:layout_marginRight="4dp"
            fresco:layout_constraintEnd_toStartOf="@+id/bear_backpack_1"
            fresco:layout_constraintTop_toTopOf="@id/bear_backpack_2"
            fresco:roundedCornerRadius="2dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bear_backpack_1"
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:layout_marginRight="4dp"
            fresco:layout_constraintEnd_toStartOf="@+id/bear_backpack_2"
            fresco:layout_constraintTop_toTopOf="@id/bear_backpack_2"
            fresco:roundedCornerRadius="2dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bear_backpack_2"
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            fresco:layout_constraintBottom_toBottomOf="parent"
            fresco:layout_constraintRight_toRightOf="parent"
            fresco:layout_constraintTop_toBottomOf="@id/bear_backpack"
            fresco:roundedCornerRadius="2dp" />
</android.support.constraint.ConstraintLayout>