<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            fresco:cardCornerRadius="0dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/gamemode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    fresco:layout_constraintBottom_toTopOf="@+id/duration"
                    fresco:layout_constraintEnd_toEndOf="parent"
                    fresco:layout_constraintStart_toStartOf="parent"
                    fresco:layout_constraintTop_toTopOf="parent"
                    tools:text="All Pick" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    fresco:layout_constraintBottom_toBottomOf="parent"
                    fresco:layout_constraintEnd_toEndOf="parent"
                    fresco:layout_constraintStart_toStartOf="parent"
                    fresco:layout_constraintTop_toTopOf="parent"
                    tools:text="00:00" />

                <TextView
                    android:id="@+id/radiant_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/win"
                    android:textSize="40sp"
                    fresco:layout_constraintBottom_toBottomOf="parent"
                    fresco:layout_constraintEnd_toStartOf="@+id/duration"
                    fresco:layout_constraintTop_toTopOf="parent"
                    tools:text="56" />

                <TextView
                    android:id="@+id/dire_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/lose"
                    android:textSize="40sp"
                    fresco:layout_constraintBottom_toBottomOf="parent"
                    fresco:layout_constraintStart_toEndOf="@+id/duration"
                    fresco:layout_constraintTop_toTopOf="parent"
                    tools:text="54" />

                <TextView
                    android:id="@+id/radiant_victory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/radiant_victory"
                    android:textColor="@color/win"
                    android:textSize="18sp"
                    android:layout_marginTop="6dp"
                    android:visibility="invisible"
                    fresco:layout_constraintStart_toStartOf="parent"
                    fresco:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/dire_victory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dire_victory"
                    android:textColor="@color/lose"
                    android:layout_marginTop="6dp"
                    android:textSize="18sp"
                    android:visibility="invisible"
                    fresco:layout_constraintEnd_toEndOf="parent"
                    fresco:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fresco:layout_constraintBottom_toTopOf="@id/skill"
                    fresco:layout_constraintEnd_toEndOf="parent"
                    fresco:layout_constraintStart_toStartOf="parent"
                    fresco:layout_constraintTop_toBottomOf="@+id/duration"
                    tools:text="2 Days ago" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/match_id"
                    android:textSize="13sp"
                    fresco:layout_constraintBottom_toTopOf="@+id/match_id"
                    fresco:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/match_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    fresco:layout_constraintBottom_toBottomOf="parent"
                    fresco:layout_constraintStart_toStartOf="parent"
                    tools:text="3896689580" />

                <TextView
                    android:id="@+id/skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    fresco:layout_constraintBottom_toBottomOf="parent"
                    fresco:layout_constraintEnd_toEndOf="parent"
                    fresco:layout_constraintStart_toStartOf="parent"
                    fresco:layout_constraintTop_toBottomOf="@+id/start_time"
                    tools:text="Very High"
                    tools:textColor="@color/very_high" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/region"
                    android:textSize="13sp"
                    fresco:layout_constraintBottom_toTopOf="@+id/region"
                    fresco:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    fresco:layout_constraintBottom_toBottomOf="parent"
                    fresco:layout_constraintEnd_toEndOf="parent"
                    tools:text="China TC Guangdong" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    fresco:layout_constraintBottom_toBottomOf="parent"
                    fresco:layout_constraintEnd_toStartOf="@+id/radiant_score"
                    fresco:layout_constraintStart_toStartOf="parent"
                    fresco:layout_constraintTop_toTopOf="parent"
                    fresco:srcCompat="@drawable/radiant_logo" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginRight="8dp"
                    fresco:layout_constraintBottom_toBottomOf="parent"
                    fresco:layout_constraintEnd_toEndOf="parent"
                    fresco:layout_constraintStart_toEndOf="@+id/dire_score"
                    fresco:layout_constraintTop_toTopOf="parent"
                    fresco:srcCompat="@drawable/dire_logo" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/bp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/ban_pick"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ban_pick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        <TextView
            android:id="@+id/pl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/players_"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/players"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingBottom="4dp">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/ab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/ability_build"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ability_builds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginBottom="4dp"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:nestedScrollingEnabled="false"
                android:scrollbarSize="1dp"
                android:scrollbarStyle="outsideOverlay" />
        </HorizontalScrollView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>