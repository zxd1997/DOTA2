<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="47dp"
    android:layout_marginBottom="1dp"
    android:layout_marginRight="1dp">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hheader"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="left|center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundBottomRight="false"
            app:roundTopRight="false"
            app:roundedCornerRadius="2dp" />

        <View
            android:id="@+id/color_skill"
            android:layout_width="2dp"
            android:layout_height="45dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="82dp"
            app:layout_constraintLeft_toRightOf="@id/hheader"
            app:layout_constraintTop_toTopOf="@id/hheader" />

        <TextView
            android:id="@+id/playername"
            android:layout_width="153dp"
            android:layout_height="26dp"
            android:layout_gravity="left|center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="86dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/hheader"
            app:layout_constraintStart_toEndOf="@+id/hheader"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="xxxxxxxxxx" />


</android.support.v7.widget.CardView>