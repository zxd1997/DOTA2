<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="51dp"
        app:cardCornerRadius="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/hheader"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:roundBottomRight="false"
                app:roundTopRight="false"
                app:roundedCornerRadius="2dp" />

            <View
                android:id="@+id/color_detail"
                android:layout_width="3dp"
                android:layout_height="45dp"
                app:layout_constraintLeft_toRightOf="@id/hheader"
                app:layout_constraintTop_toTopOf="@id/hheader"></View>

            <TextView
                android:id="@+id/hname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/hheader"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1231231" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@android:color/white"
                android:text="Damage Dealt"
                android:id="@+id/t1"
                android:textColor="@color/win"
                android:textSize="15sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/d_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/white"></android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@android:color/white"
                android:text="Damage Taken"
                android:id="@+id/t2"
                android:textColor="@color/lose"
                android:textSize="15sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/d_taken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/white" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>