<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/log_time"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        fresco:layout_constraintBottom_toTopOf="@id/line"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toTopOf="parent"
        tools:text="1:00:00" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/log_killer"
        android:layout_width="48dp"
        android:layout_height="27dp"
        android:layout_marginLeft="2dp"
        fresco:layout_constraintLeft_toRightOf="@id/log_time"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:layout_constraintBottom_toTopOf="@id/line"
        fresco:roundBottomRight="false"
        fresco:roundTopRight="false"
        fresco:roundedCornerRadius="1dp" />
    <View
        android:id="@+id/log_color"
        android:layout_width="2dp"
        android:layout_height="27dp"
        fresco:layout_constraintLeft_toRightOf="@id/log_killer"
        fresco:layout_constraintTop_toTopOf="@id/log_killer" />

    <TextView
        android:id="@+id/log_name"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        fresco:layout_constraintBottom_toTopOf="@id/line"
        fresco:layout_constraintLeft_toRightOf="@id/log_color"
        fresco:layout_constraintTop_toTopOf="parent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/kill"
        android:layout_width="24dp"
        android:layout_height="17dp"
        android:layout_marginRight="160dp"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintBottom_toTopOf="@id/line"
        fresco:layout_constraintTop_toTopOf="parent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/log_killed"
        android:layout_width="48dp"
        android:layout_height="27dp"
        android:visibility="gone"
        android:layout_marginLeft="4dp"
        fresco:layout_constraintBottom_toTopOf="@id/line"
        fresco:layout_constraintLeft_toRightOf="@+id/kill"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:roundedCornerRadius="1dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/what"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lineSpacingMultiplier="0.8"
        android:singleLine="true"
        android:textSize="13sp"
        android:visibility="gone"
        fresco:layout_constraintBottom_toTopOf="@id/line"
        fresco:layout_constraintLeft_toRightOf="@+id/kill"
        fresco:layout_constraintTop_toTopOf="parent"
        tools:text="Radiant Middle Tower Tier 4"
        tools:visibility="visible" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        fresco:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>