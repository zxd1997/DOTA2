<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="27dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/log_time"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        fresco:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toTopOf="parent"
        tools:text="1:00:00" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/log_picker"
        android:layout_width="48dp"
        android:layout_height="27dp"
        android:layout_marginLeft="2dp"
        fresco:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintLeft_toRightOf="@id/log_time"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:roundBottomRight="false"
        fresco:roundTopRight="false"
        fresco:roundedCornerRadius="2dp" />

    <View
        android:id="@+id/log_color"
        android:layout_width="2dp"
        android:layout_height="27dp"
        fresco:layout_constraintLeft_toRightOf="@id/log_picker"
        fresco:layout_constraintTop_toTopOf="@id/log_picker" />

    <TextView
        android:id="@+id/log_name"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        fresco:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintLeft_toRightOf="@id/log_color"
        fresco:layout_constraintTop_toTopOf="parent"
        tools:text="xxxxxxxxxxxxxxxxxx" />

    <TextView
        android:id="@+id/do_what"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingMultiplier="0.9"
        android:singleLine="false"
        android:textSize="13.5sp"
        fresco:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintTop_toTopOf="parent"
        tools:text="Activated Double Damage Rune" />

</android.support.constraint.ConstraintLayout>