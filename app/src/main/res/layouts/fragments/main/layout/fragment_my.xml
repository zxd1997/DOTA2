<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:foregroundGravity="center"
        android:indeterminateDrawable="@drawable/logo_animation"
        android:visibility="gone"
        fresco:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintEnd_toEndOf="parent"
        fresco:layout_constraintHorizontal_bias="0.5"
        fresco:layout_constraintStart_toStartOf="parent"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:layout_constraintVertical_bias="0.44" />

    <ViewStub
        android:id="@+id/view_stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/view_no_binding"
        fresco:layout_constraintBottom_toTopOf="@+id/progressBar" />

    <android.support.v7.widget.CardView
        android:id="@+id/my_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        fresco:cardCornerRadius="3dp"
        fresco:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/header"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            fresco:layout_constraintStart_toStartOf="parent"
            fresco:layout_constraintTop_toTopOf="parent"
            fresco:placeholderImage="@drawable/logo"
            fresco:roundedCornerRadius="5dp"
            fresco:roundingBorderColor="@color/trans_pri_red"
            fresco:roundingBorderWidth="1dp" />

        <TextView
            android:id="@+id/personaname"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textSize="20sp"
            fresco:layout_constraintLeft_toRightOf="@id/header"
            fresco:layout_constraintTop_toTopOf="parent"
            tools:text="Player name xxxxxxxxxxxxxxxxxxxxx" />

        <TextView
            android:id="@+id/account_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            fresco:layout_constraintLeft_toLeftOf="@id/personaname"
            fresco:layout_constraintTop_toBottomOf="@id/personaname"
            tools:text="id:" />

        <TextView
            android:id="@+id/win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="73dp"
            android:textColor="@color/win"
            android:textSize="15sp"
            fresco:layout_constraintBottom_toBottomOf="@id/header"
            fresco:layout_constraintLeft_toLeftOf="@id/personaname"
            tools:text="wins:1024" />

        <TextView
            android:id="@+id/lose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="161dp"
            android:layout_marginTop="73dp"
            android:textColor="@color/lose"
            android:textSize="15sp"
            fresco:layout_constraintBottom_toBottomOf="@id/header"
            fresco:layout_constraintLeft_toRightOf="@+id/win"
            tools:text="loses:1024" />

        <TextView
            android:id="@+id/win_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="73dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            fresco:layout_constraintBottom_toBottomOf="@id/header"
            fresco:layout_constraintLeft_toRightOf="@id/lose"
            tools:text="winrate:99.99%" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/tier"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            fresco:layout_constraintEnd_toEndOf="parent"
            fresco:layout_constraintTop_toTopOf="parent"
            fresco:placeholderImage="@drawable/rank_icon_0"
            fresco:roundedCornerRadius="5dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/star"
            android:layout_width="90dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            fresco:layout_constraintLeft_toLeftOf="@id/tier"
            fresco:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rank"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="4.5dp"
            android:gravity="center"
            android:textColor="@color/gold"
            android:textSize="21sp"
            fresco:layout_constraintBottom_toBottomOf="@id/tier"
            fresco:layout_constraintLeft_toLeftOf="@id/tier" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/recent_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:text="@string/recent_matches"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="gone"
        fresco:layout_constraintTop_toBottomOf="@id/my_card"
        tools:visibility="visible" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        fresco:layout_constraintTop_toBottomOf="@id/recent_match"
        tools:visibility="visible"
        android:layout_marginBottom="2dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recent_matches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:focusable="false"
            android:focusableInTouchMode="false">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.constraint.ConstraintLayout>