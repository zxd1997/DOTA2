<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="55dp"
    android:layout_width="match_parent"
    fresco:cardCornerRadius="3dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            fresco:roundedCornerRadius="4dp"
            android:id="@+id/hero_header"/>

        <TextView
            android:id="@+id/hero_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hero_header"
            android:textSize="20dp"
            tools:text="Phoenix" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/winornot"
            android:layout_alignLeft="@id/hero_name"
            tools:text="Lose"
            android:layout_alignBottom="@id/hero_header"
            android:textSize="17dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:layout_alignBottom="@id/winornot"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            tools:text="2Days ago"
            android:layout_toRightOf="@id/winornot"
            android:textSize="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_mode"
            android:layout_toRightOf="@id/hero_name"
            android:layout_alignBottom="@id/hero_name"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            tools:text="All Pick"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lobby_type"
            android:layout_alignBottom="@id/game_mode"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/game_mode"
            tools:text="Battle Cup"/>

        <TextView
            android:id="@+id/skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textSize="19dp"
            tools:text="Very High" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kda"
            android:layout_alignBottom="@id/hero_header"
            android:layout_alignRight="@id/skills"
            android:textSize="17dp"
            tools:text="10/0/10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hero_damage"
            android:layout_alignRight="@id/skills"
            android:layout_below="@id/skills"
            android:visibility="gone"
            tools:text="Damage:10000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hero_damage"
            android:layout_alignRight="@id/hero_damage"
            android:id="@+id/gpm"
            android:textSize="12dp"
            android:layout_marginTop="1dp"
            android:visibility="gone"
            tools:text="GPM:999"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hero_damage"
            android:layout_toLeftOf="@id/gpm"
            android:id="@+id/xpm"
            tools:text="XPM:999"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:textSize="12dp"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>